{
  "expo": {
    "name": "AFRISENS",
    "slug": "afrisens",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/new_icon.png",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "assets/**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.afrisens.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Afrisens needs camera access to upload verification videos and receipts.",
        "NSMicrophoneUsageDescription": "Afrisens needs microphone access for video recording.",
        "NSPhotoLibraryUsageDescription": "Afrisens needs photo library access to select images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/new_icon.png",
        "backgroundColor": "#ffffff00"
      },
      "package": "com.afrisens.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO"
      ],
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ],
      "expo-font"
    ],
    "scheme": "afrisens",
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}
